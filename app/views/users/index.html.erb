<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>User name</th>
      <th>Password</th>
      <th>Email</th>
      <th>Avatar link</th>
      <th>Is admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_name %></td>
        <td><%= user.password %></td>
        <td><%= user.email %></td>
        <td>
          <img src="<%= gravatarized_url(user.user_name)  %>" class="align-self-start mr-3">
        </td>
        <td><%= user.is_admin %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- realistically, we dont want to be creating new users this way, duh, but its good practice in rendering a form I guess... -->
<%= render("form", user: User.new) %>

